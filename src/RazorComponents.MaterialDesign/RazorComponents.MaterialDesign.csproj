<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <IsPackable>true</IsPackable>
    <BlazorLinkOnBuild>false</BlazorLinkOnBuild>
    <LangVersion>7.3</LangVersion>
    <PackageVersion>0.1.0-alpha-$([System.DateTime]::Now.ToString(yyyyMMddhhmmss))</PackageVersion>
    <ComponentsPackageVersion>3.0.0-preview3-19153-02</ComponentsPackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Browser" Version="$(ComponentsPackageVersion)" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Build" Version="$(ComponentsPackageVersion)" PrivateAssets="all" />
  </ItemGroup>

  <!-- Pack settings -->
  <PropertyGroup>
    <NuspecFile>RazorComponents.MaterialDesign.nuspec</NuspecFile>
    <NoPackageAnalysis>true</NoPackageAnalysis>
  </PropertyGroup>
  <Target Name="PublishAll" BeforeTargets="_IntermediatePack">
    <PropertyGroup>
      <NuspecProperties>
      version=$(PackageVersion);
      componentsversion=$(ComponentsPackageVersion);</NuspecProperties>
    </PropertyGroup>
  </Target>

</Project>
